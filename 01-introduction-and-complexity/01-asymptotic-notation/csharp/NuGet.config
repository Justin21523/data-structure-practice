<?xml version="1.0" encoding="utf-8"?>
<!-- Configure NuGet for offline-friendly restores in restricted environments. -->
<configuration>
  <!-- Override inherited sources so `dotnet restore` does not require network access. -->
  <packageSources>
    <!-- Clear global sources like nuget.org (this repo intentionally avoids external packages). -->
    <clear />
    <!-- Provide a local folder source; it can be empty because we have no PackageReference items. -->
    <add key="offline" value="nuget-offline" />
  </packageSources>
</configuration>
